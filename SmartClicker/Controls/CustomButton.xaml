<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartClicker.Controls.CustomButton"
             x:Name="Parent">
    <Button Text="{Binding Text, Source={x:Reference Parent}}"
            BackgroundColor="#5CA35F"
            TextColor="#1F1F1F"
            FontAttributes="Bold"
            BorderWidth="3"
            Command="{Binding Command, Source={x:Reference Parent}}"
            Clicked="OnAnimateClicked"/>
</ContentView>
