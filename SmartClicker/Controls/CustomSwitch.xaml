<?xml version="1.0" encoding="utf-8" ?>
<Button xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="SmartClicker.Controls.CustomSwitch"
        Clicked="OnButtonClicked"
        BackgroundColor="{Binding BackgroundColor, Source={x:Reference Parent}}"
        FontSize="14"
        FontAttributes="Bold"
        CornerRadius="15"
        WidthRequest="65"
        HeightRequest="35"
        BorderWidth="3">
    <Button.Triggers>
        <DataTrigger TargetType="Button"
                     Binding="{Binding IsToggled, Source={x:Reference Parent}}"
                     Value="True">
        </DataTrigger>
        <DataTrigger TargetType="Button"
                     Binding="{Binding IsToggled, Source={x:Reference Parent}}"
                     Value="False">
        </DataTrigger>
    </Button.Triggers>
</Button>
